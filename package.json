{
  "name": "commit-craft",
  "version": "0.0.1-1",
  "description": "CommitCraft is an AI-powered tool for generating clear and concise Git commit messages. It analyzes the diff of updated files in your Git repository to suggest relevant and meaningful messages that accurately describe your changes.",
  "main": "src/index.ts",
  "bin": {
    "commit-craft": "dist/bundle.js",
    "cc": "dist/bundle.js"
  },
  "scripts": {
    "build": "npm run clean && webpack && chmod +x dist/bundle.js",
    "clean": "rm -rf dist",
    "start": "npm run build && node dist/bundle.js",
    "dev": "npm run build && nodemon dist/bundle.js",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .ts src",
    "coverage": "jest --coverage && coveralls < coverage/lcov.info",
    "release": "webpack && release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:prerelease": "release-it prerelease",
    "release:prerelease:alpha": "release-it prerelease --preReleaseId alpha",
    "release:prerelease:beta": "release-it prerelease --preReleaseId beta"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lokicoule/CommitCraft.git"
  },
  "keywords": [
    "github",
    "commit",
    "typescript",
    "cli",
    "git",
    "commit-craft"
  ],
  "author": "Loik F.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lokicoule/CommitCraft/issues"
  },
  "homepage": "https://github.com/Lokicoule/CommitCraft#readme",
  "devDependencies": {
    "@clack/prompts": "^0.6.3",
    "@types/jest": "^29.4.0",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "commander": "^10.0.0",
    "commit-craft": "^0.0.1-1",
    "coveralls": "^3.1.1",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "mock-fs": "^5.2.0",
    "nodemon": "^2.0.21",
    "picocolors": "^1.0.0",
    "release-it": "^15.9.3",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "jest": {
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/**/*.(t|j)s",
      "!**/index.(t|j)s",
      "!**/types.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "commandzen": "^0.3.1"
  }
}
